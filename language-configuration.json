{
  "comments": {
    "lineComment": "//",
    "blockComment": [ "/*", "*/" ]
  },
  // symbols used as brackets
  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "<", ">" ]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "\"", "\"" ],
    [ "'", "'" ],
    { "open": "/*", "close": "*/", "notIn": ["string", "comment"] },
    // color sequences
    { "open" : "%^", "close" : "%^" },  // such as %^RED%^ or %^BOLD%^RED%^
    { "open" : "`<", "close" : ">`" }   // ThresholdRPG's 256-color format `<fff>`
  ],
  "autoCloseBefore": ";:.,=}])> \n\t",
  // symbols that that can be used to surround a selection
  "surroundingPairs": [
    [ "({", "})"],
    [ "([", "])"],
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "<", ">" ],
    [ "\"", "\"" ],
    [ "'", "'" ]
  ],
  "indentationRules": {
		"increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
		"decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
  }
}
