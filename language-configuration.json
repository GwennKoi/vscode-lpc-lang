{
  "comments": {
    "lineComment": "//",
    "blockComment": [ "/*", "*/" ]
  },
  // symbols used as brackets
  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "<", ">" ]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    [ "({", "})"],
    [ "([", "])"],
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "\"", "\"" ],
    [ "'", "'" ],
    { "open": "/*", "close": "*/", "notIn": ["string", "comment"] }
  ],
  "autoCloseBefore": ";:.,=}])> \n\t",
  // symbols that that can be used to surround a selection
  "surroundingPairs": [
    [ "({", "})"],
    [ "([", "])"],
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "<", ">" ],
    [ "\"", "\"" ],
    [ "'", "'" ]
  ],
  "indentationRules": {
		"increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
		"decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
  }
}
